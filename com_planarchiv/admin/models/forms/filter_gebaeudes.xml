<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			hint="JSEARCH_FILTER"
		/>
		<field
			name="state"
			type="status"
			onchange="this.form.submit();"
		>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>
		<field
			name="OrtName"
			type="sql"
			query="SELECT DISTINCT OrtName FROM #__planarchiv_gebaeude ORDER BY OrtName ASC"
			value_field="OrtName"
			key_field="OrtName"
			onchange="this.form.submit();"
		>
			<option value="">COM_PLANARCHIV_SELECT_ORT</option>
		</field>
		<field
			name="category_id"
			type="category"
			extension="com_planarchiv"
			onchange="this.form.submit();"
		>
			<option value="">JOPTION_SELECT_CATEGORY</option>
		</field>
		<field
			name="level"
			type="integer"
			first="1"
			last="10"
			step="1"
			languages="*"
			onchange="this.form.submit();"
		>
			<option value="">JOPTION_SELECT_MAX_LEVELS</option>
		</field>
		<field
			name="language"
			type="contentlanguage"
			onchange="this.form.submit();"
		>
			<option value="">JOPTION_SELECT_LANGUAGE</option>
			<option value="*">JALL</option>
		</field>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			onchange="this.form.submit();"
		>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="gebaeudes.ordering ASC">JGRID_HEADING_ORDERING_ASC</option>
			<option value="gebaeudes.ordering DESC">JGRID_HEADING_ORDERING_DESC</option>
			<option value="gebaeudes.state ASC">JSTATUS_ASC</option>
			<option value="gebaeudes.state DESC">JSTATUS_DESC</option>
			<option value="gebaeudes.title ASC">JGLOBAL_TITLE_ASC</option>
			<option value="gebaeudes.title DESC">JGLOBAL_TITLE_DESC</option>
			<option value="category_title ASC">JCATEGORY_ASC</option>
			<option value="category_title DESC">JCATEGORY_DESC</option>
			<option value="language ASC">JGRID_HEADING_LANGUAGE_ASC</option>
			<option value="language DESC">JGRID_HEADING_LANGUAGE_DESC</option>
			<option value="gebaeudes.created ASC">JDATE_ASC</option>
			<option value="gebaeudes.created DESC">JDATE_DESC</option>
			<option value="gebaeudes.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="gebaeudes.id DESC">JGRID_HEADING_ID_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
