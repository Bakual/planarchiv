<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_PLANARCHIV_FILTER_SEARCH_DESC"
			hint="JSEARCH_FILTER"
		/>
		<field
			name="state"
			type="status"
			label="COM_PLANARCHIV_FILTER_PUBLISHED"
			description="COM_PLANARCHIV_FILTER_PUBLISHED_DESC"
			onchange="this.form.submit();"
		>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>
		<field
			name="category_id"
			type="category"
			label="JOPTION_FILTER_CATEGORY"
			extension="com_planarchiv"
			description="JOPTION_FILTER_CATEGORY_DESC"
			onchange="this.form.submit();"
		>
			<option value="">JOPTION_SELECT_CATEGORY</option>
		</field>
		<field
			name="level"
			type="integer"
			first="1"
			last="10"
			step="1"
			label="JOPTION_FILTER_LEVEL"
			languages="*"
			description="JOPTION_FILTER_LEVEL_DESC"
			onchange="this.form.submit();"
		>
			<option value="">JOPTION_SELECT_MAX_LEVELS</option>
		</field>
		<field
			name="language"
			type="contentlanguage"
			label="JOPTION_FILTER_LANGUAGE"
			description="JOPTION_FILTER_LANGUAGE_DESC"
			onchange="this.form.submit();"
		>
			<option value="">JOPTION_SELECT_LANGUAGE</option>
			<option value="*">JALL</option>
		</field>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="COM_PLANARCHIV_LIST_FULL_ORDERING"
			description="COM_PLANARCHIV_LIST_FULL_ORDERING_DESC"
			onchange="this.form.submit();"
		>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="plans.ordering ASC">JGRID_HEADING_ORDERING_ASC</option>
			<option value="plans.ordering DESC">JGRID_HEADING_ORDERING_DESC</option>
			<option value="plans.state ASC">JSTATUS_ASC</option>
			<option value="plans.state DESC">JSTATUS_DESC</option>
			<option value="plans.title ASC">JGLOBAL_TITLE_ASC</option>
			<option value="plans.title DESC">JGLOBAL_TITLE_DESC</option>
			<option value="category_title ASC">JCATEGORY_ASC</option>
			<option value="category_title DESC">JCATEGORY_DESC</option>
			<option value="language ASC">JGRID_HEADING_LANGUAGE_ASC</option>
			<option value="language DESC">JGRID_HEADING_LANGUAGE_DESC</option>
			<option value="plans.created ASC">JDATE_ASC</option>
			<option value="plans.created DESC">JDATE_DESC</option>
			<option value="plans.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="plans.id DESC">JGRID_HEADING_ID_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_PLANARCHIV_LIST_LIMIT"
			description="COM_PLANARCHIV_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
